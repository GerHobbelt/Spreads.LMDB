<Project>
  <!-- common.props is per repo config -->
  <Import Project="Spreads.props" />
  <PropertyGroup>
    <PackageTags>LMDB;Spreads</PackageTags>
    <PackageProjectUrl>http://docs.dataspreads.io/spreads/libs/lmdb/api/README.html</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Spreads/LMDB.git</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);NETSTANDARD;NETSTANDARD20</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
    <DefineConstants>$(DefineConstants);TRACE;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>
</Project>